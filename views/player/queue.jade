extends ../layout

block nav
    include ../nav.jade

block content
    .wrapper
        .list
            each entry, index in playlist.items
                .item
                    if currentSong.uri == entry.track.uri
                        a.item-swipe.active
                            img.cover-thumbnail(src=entry.track.album.images[0].url)
                            p=entry.track.name
                            p=entry.track.artists.map(a => a.name).join(', ')
                    else
                        a.item-swipe
                            img.cover-thumbnail(src=entry.track.album.images[0].url)
                            p=entry.track.name
                            p=entry.track.artists.map(a => a.name).join(', ')
                    i.fa.fa-tasks.close
                    .item-back
                        button.action.first.btn-dislike(type='button')
                            i.fa.fa-thumbs-o-down
                        button.action.second.btn-like(type='button')
                            i.fa.fa-heart-o